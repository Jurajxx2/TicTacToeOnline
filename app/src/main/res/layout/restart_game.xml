<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/p1img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/icon_profile_empty" />

        <Button
            android:id="@+id/leavebtn"
            style="@style/FirebaseUI.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Leave" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/restartbtn"
            style="@style/FirebaseUI.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="play again"
            app:layout_constraintEnd_toStartOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statsheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your stats:"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statswins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Won:"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/statsloses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lost:" />

        <TextView
            android:id="@+id/statsdraws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Draws:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/p2img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/icon_profile_empty" />

        <TextView
            android:id="@+id/wantsplayagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wants to play again"
            android:textSize="18sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>

